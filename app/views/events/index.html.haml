
.breadcrumbs.mb-3
  .col-sm-4
    .page-header.float-left
      .page-title
        %h1
          = icon 'calendar-o', class: 'mr-1'
          Calendrier
  .col-sm-8
    .page-header.float-right
      .page-title
        %ol.breadcrumb
          %li.breadcrumb-item
            = link_to root_url do
              = icon 'home', class: 'mr-1'
              Accueil
          %li.breadcrumb-item.active Calendrier

.page-content
  .col-md-4
    .card
      .card-body
        .mb-3.p-0.clearfix
          = icon "clock-o", class: 'bg-primary p-2 fa-2x mr-3 float-left text-center text-light', style: 'width: 48px;'
          .h5.text-primary.mb-0.pt-2
            Rendez-vous
        .mb-3.p-0.clearfix
          = icon "phone", class: 'bg-info p-2 fa-2x mr-3 float-left text-center text-light', style: 'width: 48px;'
          .h5.text-info.mb-0.pt-2
            Appel téléphonique
        .mb-3.p-0.clearfix
          = icon "users", class: 'bg-secondary p-2 fa-2x mr-3 float-left text-center text-light', style: 'width: 48px;'
          .h5.text-secondary.mb-0.pt-2
            Réunion
        .mb-3.p-0.clearfix
          = icon "thumb-tack", class: 'bg-danger p-2 fa-2x mr-3 float-left text-center text-light', style: 'width: 48px;'
          .h5.text-danger.mb-0.pt-2
            Tâche
        .mb-3.p-0.clearfix
          = icon "envelope-o", class: 'bg-warning p-2 fa-2x mr-3 float-left text-center text-light', style: 'width: 48px;'
          .h5.text-warning.mb-0.pt-2
            Mail
  .col-md-8
    .card
      .card-body
        #calendar


#event.modal.fade{tabindex: '-1', role: "dialog"}
  .modal-dialog{role: "document"}
    .modal-content
